<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @match.name %>
</p>

<table>
  <tr>
    <th> Player name</th>
    <th> Score </th>
  </tr>
<% @match.players.each do |player| %>
  <tr>
    <td>
      <%= player.name %> </br>
    </td>
    <td>
      <%= player.score %> </br>
    </td>

  </tr>
<% end %>
</table>

<br><br><br>


<% @match.players.each do |player| 
  if player.played == 0 %>
    <b><%= player.name %></b>'s Turn 
    
<%
  player.played = 1
  break
  end
  end

%>



